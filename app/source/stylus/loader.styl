.loader
  border-radius 50px
  line-height 100px
  text-align center
  width 100px
  height 100px
  position absolute
  top 50%
  left 50%
  transform translate(-50%,-50%)
  letter-spacing 0.05em
  font-family 'Roboto Condensed', sans-serif
  color white
  opacity 1
  &:before
    content ''
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background rgba(black, 0.4)
    border-radius 50px
  &:before
    transform scale(1)
    animation: pusle 5s infinite ease-in-out;

@keyframes pulse
  0% {
    transform scale(0.6)
    opacity 0
  }
  33% {
    transform scale(1)
    opacity 1
  }
  100% {
    transform scale(1.4)
    opacity 0
  }